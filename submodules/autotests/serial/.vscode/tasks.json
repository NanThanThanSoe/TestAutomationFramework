{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "copy to server",
            "type": "shell",
            "command": "rsync -vtrz --exclude='.*' -e 'ssh -i C:/users/${env:USERNAME}/.ssh/id_rsa -o StrictHostKeyChecking=no' . ivu@10.13.201.18:/harddisk/tests",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "start debug server",
            "type": "shell",
            "dependsOn": "copy to server",
            "command": "ssh",
            "args": [
                "ivu@10.13.201.18",
                "cd /harddisk/tests ; nohup python3 -m debugpy --listen 0.0.0.0:9999 --wait-for-client test_ibis.py -v >nohup.out 2>&1 </dev/null & sleep 2"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "kill debug server",
            "type": "shell",
            "command": "ssh",
            "args": [
                "ivu@10.13.201.18",
                // Finds the first process in the list (= the one started first) with
                // "debugpy" in the name and terminates it.
                // This is a nightmare of escaping determined by trial and error:
                // | => "|" for PowerShell, or it cuts the command short
                // ' => '' for PowerShell, or it makes a quoted string/escape/whatever
                // " => \" because of JSON
                {
                    "value": "ps \"|\" grep debugpy \"|\" head -n 1 \"|\" awk ''{print $1}'' \"|\" xargs kill",
                    "quoting": "strong"
                }
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Run e10-pystyle on current file",
            "type": "shell",
            "command": "e10-pystyle.exe --type test ${file}",
            "presentation": {
                "reveal": "silent",
                "focus": false
            },
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "(.+):(\\d+):(\\d+): ([A-Z]\\d+) (.+)",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "code": 4,
                    "message": 5
                },
                "severity": "warning",
                "source": "e10-pystyle"
            }
        }
    ]
}
